{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block body %}
    <div class = "row">
        <div class = "col-md-6 mx-auto text-center">
            <h1>Profile</h1>
            <img style="max-width: 250px;" src={{ vich_uploader_asset(app.user, 'imageFile') }}>
            <p>{{ app.user.email }}</p>
            <h2>{{ app.user.firstname ~" "~ app.user.lastname }}</h2>
            
            
            
            {# <img src = {{ app.user.imageFile }} width="150" height="200"> #}
            <p>Account created on {{ app.user.createdAt|date }}</p>
            <p>
                <a href={{ path('app_account_edit') }}>Edit Account</a>
            </p>
        </div>
    </div>
{% endblock %}
